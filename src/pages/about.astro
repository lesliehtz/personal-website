            <a
              href="https://www.linkedin.com/in/leslie-heintz/"
              target="_blank"
              rel="noopener noreferrer">LinkedIn</a
            >
          </p>
        </div>
        <div class="credits-section">
          <h2 class="mono">Credits</h2>
          <p class="mono">
            <a
              href="https://rsms.me/inter/"
              target="_blank"
              rel="noopener noreferrer">Inter font</a
            > by <a
              href="https://rsms.me"
              target="_blank"
              rel="noopener noreferrer">Rasmus Andersson</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .about-container {
    max-width: 100%;
  }

  .about-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
  }

  .bio-section p {
    margin-bottom: 1.5rem;
  }

  .bio-section p:last-child {
    margin-bottom: 0;
  }

  .features-section h2 {
    margin-bottom: 1rem;
  }

  .find-me {
    margin-top: 3rem;
  }

  .find-me h2 {
    margin-bottom: 1rem;
  }

  .credits-section {
    margin-top: 3rem;
  }

  .credits-section h2 {
    margin-bottom: 1rem;
  }

  .photo-credit {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-top: 2rem;
  }

  .about-image {
    width: 100%;
    height: auto;
    display: block;
  }

  .underline {
    text-decoration: underline;
  }

  .social-icon {
    display: inline-block;
    vertical-align: middle;
    margin-right: 0.25rem;
  }

  @media (max-width: 768px) {
    .about-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .credits {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
