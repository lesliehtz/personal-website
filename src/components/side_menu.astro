---
interface Props {
  series?: Array<{ title: string; slug: string }>;
}

const { series = [] } = Astro.props;
---

<nav class="side-menu">
  <div class="menu-section">
    <p class="menu-label">Series</p>
    {series.length > 0 && (
      <ul class="series-list">
        {series.map((item) => (
          <li><a href={`/series/${item.slug}`}>{item.title}</a></li>
        ))}
      </ul>
    )}
  </div>

  <div class="menu-section">
    <a href="/about">About</a>
  </div>

  <div class="menu-section social">
    <a href="https://www.are.na/leslie-heintz/index" target="_blank" rel="noopener noreferrer">Are.na</a>
    <a href="https://pixelfed.social/lesliehtz" target="_blank" rel="noopener noreferrer">Pixelfed</a>
  </div>
</nav>

<style>
  .side-menu {
    text-align: left;
  }

  .menu-section {
    margin-bottom: 1.5rem;
  }

  .menu-label {
    margin-bottom: 0.5rem;
  }

  .series-list {
    list-style: none;
    padding-left: 1rem;
  }

  .series-list li {
    margin-bottom: 0.25rem;
  }

  .social {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }
</style>

<!-- fixed side menu for navigation -->

